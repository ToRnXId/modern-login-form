<UserControl x:Class="modern_login_form.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:modern_login_form.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="250">
    
    <PasswordBox x:Name="txtbPass"
         FontSize="13"
         FontWeight="Medium"
         FontFamily="Montserrat"
         Foreground="White" 
         CaretBrush="LightGray"
         BorderBrush="DarkGray"
         BorderThickness="0 0 0 1"
         VerticalContentAlignment="Center"
         Padding="20 0 0 0">

        <PasswordBox.Background>
            <ImageBrush ImageSource="/modern-login-form;component/Images/key-icon.png" 
                    Stretch="None"
                    AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>

</UserControl>
